r\n          <div class=\"chart-title\">天文学术传承谱系</div>\r\n          <div class=\"legend\">\r\n            <div class=\"legend-item\">\r\n              <span class=\"dot scholar\"></span>学者\r\n            </div>\r\n            <div class=\"legend-item\">\r\n              <span class=\"dot book\"></span>著作\r\n            </div>\r\n            <div class=\"legend-item\">\r\n              <span class=\"line\"></span>撰写/传承关系\r\n            </div>\r\n          </div>\r\n          <vue-echarts \r\n            ref=\"relationshipChart\"\r\n            :option=\"relationshipOptions\" \r\n            class=\"chart\" \r\n            :autoresize=\"true\"\r\n          />\r\n        </div>\r\n\r\n        <!-- 学术流派分布 -->\r\n        <div class=\"chart-box\">\r\n          <div class=\"chart-title\">学术流派分布</div>\r\n          <vue-echarts \r\n            ref=\"schoolChart\"\r\n            :option=\"schoolOptions\" \r\n            class=\"chart\" \r\n            :autoresize=\"true\"\r\n          />\r\n        </div>\r\n\r\n        <!-- 重要著作年代分布 -->\r\n        <div class=\"chart-box\">\r\n          <div class=\"chart-title\">重要天文著作年代分布</div>\r\n          <vue-echarts \r\n            ref=\"timelineChart\"\r\n            :option=\"timelineOptions\" \r\n            class=\"chart\" \r\n            :autoresize=\"true\"\r\n          />\r\n        </div>\r\n\r\n        <!-- 学术影响力分析 -->\r\n        <div class=\"chart-box\">\r\n          <div class=\"chart-title\">学术影响力分析</div>\r\n          <vue-echarts \r\n            ref=\"influenceChart\"\r\n            :option=\"influenceOptions\" \r\n            class=\"chart\" \r\n            :autoresize=\"true\"\r\n          />\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<style scoped>\r\n.analysis-container {\r\n  height: 100vh;\r\n  display: flex;\r\n  flex-direction: column;\r\n  background: linear-gradient(to bottom, rgba(13, 15, 44, 0.95), rgba(13, 15, 44, 0.85));\r\n  position: relative;\r\n  padding: 20px;\r\n}\r